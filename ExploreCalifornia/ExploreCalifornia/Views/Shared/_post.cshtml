@inject ExploreCalifornia.Models.FormattingService Format
@model ExploreCalifornia.Models.Post

    <p class="pager">        
        @if (ViewBag.HasPreviousPage)
        {
            <a class="prev" href="@Url.Action("Index", "Blog" , new { page = ViewBag.PreviousPage })" title="Previous">
                &lt;Previous
            </a>
        }

        @if (ViewBag.HasNextPage)
        {
            <a class="next" href="@Url.Action("Index", "Blog" , new { page = ViewBag.NextPage })" title="Next">
                Next&gt;
            </a>
        }
    </p>
<article class="blog-post">
    <h1>
        @Html.ActionLink(Model.Title, "Post", "Blog",
            new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key }
        )
    </h1>
    <div class="details">
        Posted <span>@Format.AsReadableDate(Model.Posted)</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>